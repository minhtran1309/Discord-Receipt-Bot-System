# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=  # Optional: your server ID for faster command sync during development

# Mistral OCR API
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_OCR_MODEL=mistral-ocr-latest  # Optional: OCR model to use (default: mistral-ocr-latest)
OCR_TABLE_FORMAT=html  # Table format: "html", "markdown", or leave empty for none
OCR_EXTRACT_HEADER=true  # Extract header information from receipts
OCR_USE_STRUCTURED_EXTRACTION=true  # Use Pydantic schema for structured data extraction

# OpenRouter API
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4o-mini  # OpenAI's cheapest model for item guessing

# Google Sheets
GOOGLE_CREDENTIALS_PATH=credentials.json
GOOGLE_SPREADSHEET_ID=your_google_spreadsheet_id_here

# Application Settings
CONFIDENCE_THRESHOLD=0.7
DATA_DIR=data
LOG_LEVEL=INFO
